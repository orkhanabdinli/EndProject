@model ChangePasswordViewModel
<div class="middle-sidebar-left">
    <div class="middle-wrap">
        <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
            <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                <a asp-action="Index" asp-controller="UserSettings" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Change Password</h4>
            </div>
            <div class="card-body p-lg-5 p-4 w-100 border-0">
                <input type="hidden" id="userId" value="@Model.UserId">
                <input type="hidden" id="tokenId" value="@Model.Token">

                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <div class="form-gorup">
                            <label class="mont-font fw-600 font-xssss">Current Password</label>
                            <input id="currentPasswordId" type="password" name="comment-name" class="form-control">
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <div class="form-gorup">
                            <label class="mont-font fw-600 font-xssss">New Password</label>
                            <input id="newPasswordId" type="password" name="comment-name" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <div class="form-gorup">
                            <label class="mont-font fw-600 font-xssss">Confirm New Password</label>
                            <input id="confirmPasswordId" type="password" name="comment-name" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-0">
                        <button id="changePasswordBtn" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block">Save</a>
                    </div>
                </div>

            </div>
        </div>
        <!-- <div class="card w-100 border-0 p-2"></div> -->
    </div>
</div>

