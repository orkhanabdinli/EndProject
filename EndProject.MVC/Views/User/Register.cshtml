@{
    Layout = null;
}
@model RegisterViewModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DostLook. - Register</title>

    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/feather.css">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body class="color-theme-blue">

    <div class="preloader"></div>

    <div class="main-wrap">

        <div class="nav-header" style="background: transparent; box-shadow: none; border: 0;">
            <div class="nav-top" style="width: 100%; display: flex; justify-content: space-between; align-items: center;">
                <a asp-action="register" asp-controller="user" style="display: flex; align-items: center;">
                    <i class="feather-zap" style="color: #28a745; font-size: 2rem; margin-right: 0.5rem;"></i>
                    <span class="fredoka-font" style="letter-spacing: 3px; font-weight: 600; color: currentColor; font-size: 2rem;">DostLook.</span>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-5 d-none d-xl-block p-0 vh-100 bg-image-cover bg-no-repeat" style="background-image: url('/images/login-bg-2.jpg');"></div>
            <div class="col-xl-7 d-flex align-items-center bg-white rounded-3 overflow-hidden">
                <div class="container">
                    <div class="card shadow-none border-0 ms-auto me-auto login-card">
                        <div class="card-body rounded-0 text-left">
                            <h2 class="fw-700 display2-size mb-3">Create your account</h2>
                            <form name="register-form" id="register-form" method="post">
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="FirstName" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="First Name">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="LastName" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Last Name">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="UserName" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Username">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="Email" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Your Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="Country" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Country">
                                            <span asp-validation-for="Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group icon-input mb-1">
                                            <input asp-for="City" type="text" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="City">
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group icon-input">
                                    <select asp-for="Gender" class="style2-input form-control text-grey-900 font-sm fw-600 mb-2" aria-label=".form-select-lg example">
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Prefer not to say">Prefer not to say</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group icon-input">
                                            <input asp-for="Password" type="Password" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group icon-input">
                                            <input asp-for="ConfirmPassword" type="Password" class="style2-input form-control text-grey-900 font-xs fw-600" placeholder="Confirm Password">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />
                                <div class="form-check text-left mb-1">
                                    <input type="checkbox" class="form-check-input mt-1" id="termsCheckbox">
                                    <label class="form-check-label font-xs text-grey-500" for="termsCheckbox">Accept Terms and Conditions</label>
                                </div>

                                <div class="col-sm-12 p-0 text-left">
                                    <div class="form-group mb-1">
                                        <button id="registerButton" type="submit" class="form-control text-center style2-input text-white fw-600 bg-dark border-0 p-0">Register</button>
                                    </div>
                                    <h6 class="text-grey-500 font-xs fw-500 mt-0 mb-0 lh-24">Already have an account? <a asp-action="Login" asp-controller="User" class="fw-700 ms-1">Login</a></h6>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/plugin.js"></script>
    <script src="~/js/index.js"></script>
    <script src="~/js/scripts.js"></script>

</body>
</html>

