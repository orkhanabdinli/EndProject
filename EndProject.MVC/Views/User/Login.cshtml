<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DostLook. - Login</title>

    <link rel="stylesheet" href="css/themify-icons.css">
    <link rel="stylesheet" href="css/feather.css">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="~/css/style.css">



</head>

<body class="color-theme-blue">

    <div class="preloader"></div>

    <div class="main-wrap">

        <div class="nav-header" style="background: transparent; box-shadow: none; border: 0;">
            <div class="nav-top" style="width: 100%; display: flex; justify-content: space-between; align-items: center;">
                <a asp-action="login" asp-controller="user" style="display: flex; align-items: center;">
                    <i class="feather-zap" style="color: #28a745; font-size: 2rem; margin-right: 0.5rem;"></i>
                    <span class="fredoka-font" style="letter-spacing: 3px; font-weight: 600; color: currentColor; font-size: 2rem;">DostLook.</span>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-5 d-none d-xl-block p-0 vh-100 bg-image-cover bg-no-repeat" style="background-image: url('/images/login-bg.jpg');"></div>
            <div class="col-xl-7 vh-100 align-items-center d-flex bg-white rounded-3 overflow-hidden">
                <div class="card shadow-none border-0 ms-auto me-auto login-card">
                    <div class="card-body rounded-0 text-left">
                        <h2 class="fw-700 display1-size display2-md-size mb-3">Login into <br>your account</h2>
                        <form name="login-form" id='login-form' method="post">

                            <div class="form-group icon-input mb-3">
                                <i class="font-sm ti-email text-grey-500 pe-0"></i>
                                <input asp-for="Email" type="text" class="style2-input ps-5 form-control text-grey-900 font-xsss fw-600" placeholder="Your Email Address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group icon-input mb-1">
                                <input asp-for="Password" type="Password" class="style2-input ps-5 form-control text-grey-900 font-xss ls-3" placeholder="Password">
                                <i class="font-sm ti-lock text-grey-500 pe-0"></i>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check text-left mb-3">
                                <a href="forgot.html" class="fw-600 font-xsss text-grey-700 mt-1 float-right">Forgot your Password?</a>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />
                            </div>
                            <div class="col-sm-12 p-0 text-left">
                                <div class="form-group mb-1"><button type="submit" class="form-control text-center style2-input text-white fw-600 bg-dark border-0 p-0 ">Login</button></div>
                                <h6 class="text-grey-500 font-xsss fw-500 mt-0 mb-0 lh-32">Don't have an account? <a asp-action="register" asp-controller="user" class="fw-700 ms-1">Register</a></h6>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/plugin.js"></script>
    <script src="~/js/scripts.js"></script>

</body>


